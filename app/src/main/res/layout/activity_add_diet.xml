<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_new_diet"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="#7ED648"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diet_name"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/editTextDietName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_diet_name"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="@string/enter_description"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp"
        android:gravity="top"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allergies"
        android:textSize="16sp"/>

    <CheckBox
        android:id="@+id/checkBoxGluten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gluten"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:id="@+id/checkBoxDairy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dairy"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:id="@+id/checkBoxPeanuts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/peanuts"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#7ED648"
        android:padding="8dp">

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:backgroundTint="#6A0DAD"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout>